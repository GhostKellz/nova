{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus datasource for Nova",
      "type": "datasource",
      "pluginId": "prometheus",
      "pluginName": "Prometheus"
    }
  ],
  "__requires": [
    {
      "type": "panel",
      "id": "timeseries",
      "name": "Time series",
      "version": "9.2.0"
    },
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "2.37.0"
    }
  ],
  "title": "Nova RC5 Overview",
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "15s",
  "annotations": {
    "list": []
  },
  "panels": [
    {
      "type": "stat",
      "title": "Running VMs",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "sum(nova_vm_status{state=\"running\"})",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "VM CPU Seconds",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "sum(rate(nova_vm_cpu_seconds_total[5m]))",
          "legendFormat": "Total CPU",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 4, "y": 0 }
    },
    {
      "type": "timeseries",
      "title": "Network RX/TX per Switch",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "sum by (switch)(rate(nova_network_rx_bytes_total[5m]))",
          "legendFormat": "{{switch}} RX",
          "refId": "A"
        },
        {
          "expr": "sum by (switch)(rate(nova_network_tx_bytes_total[5m]))",
          "legendFormat": "{{switch}} TX",
          "refId": "B"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 }
    },
    {
      "type": "stat",
      "title": "Docs Search Failure Ratio",
      "datasource": {
        "type": "prometheus",
        "uid": "${DS_PROMETHEUS}"
      },
      "targets": [
        {
          "expr": "avg(nova_docs_search_failure_ratio)",
          "refId": "A"
        }
      ],
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 0 }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "namespace",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${DS_PROMETHEUS}"
        },
        "definition": "label_values(nova_vm_status, namespace)",
        "refresh": 1,
        "multi": true,
        "includeAll": true
      }
    ]
  }
}
