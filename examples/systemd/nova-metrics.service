[Unit]
Description=Nova Metrics Exporter
After=network.target
Documentation=https://docs.nova.dev/rc5/observability

[Service]
Type=simple
User=nova
Group=nova
ExecStart=/usr/bin/nova-metrics --config /etc/nova/NovaFile
Restart=on-failure
RestartSec=5
Environment=RUST_LOG=info

[Install]
WantedBy=multi-user.target
